<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.luispichiya.controller.FormEmpleadosController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FormularioEmpleados.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfEmpleadoId" editable="false" layoutX="50.0" layoutY="179.0" prefHeight="25.0" prefWidth="200.0" promptText="Empleado ID" />
      <TextField fx:id="tfNombreEmpleado" layoutX="50.0" layoutY="268.0" prefHeight="25.0" prefWidth="200.0" promptText="Ingrese su nombre" />
      <TextField fx:id="tfApellidoEmpleado" layoutX="50.0" layoutY="363.0" prefHeight="25.0" prefWidth="200.0" promptText="Ingrese su apellido" />
      <TextField fx:id="tfSueldo" layoutX="50.0" layoutY="451.0" prefHeight="25.0" prefWidth="200.0" promptText="00.00" />
      <TextField fx:id="tfHoraEntrada" layoutX="50.0" layoutY="544.0" prefHeight="25.0" prefWidth="200.0" promptText="hh:mm:ss" />
      <TextField fx:id="tfHoraSalida" layoutX="50.0" layoutY="622.0" prefHeight="25.0" prefWidth="200.0" promptText="hh:mm:ss" />
      <ComboBox fx:id="cmbCargoId" layoutX="340.0" layoutY="268.0" prefHeight="25.0" prefWidth="123.0" />
      <GridPane layoutX="84.0" layoutY="653.0" prefHeight="95.0" prefWidth="180.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="45.0" prefWidth="80.0" text="Guardar" />
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="45.0" prefWidth="80.0" text="Cancelar" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
